<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LottieTabs">

    <include
        android:id="@+id/tab1"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tab2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <include
        android:id="@+id/tab2"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toEndOf="@+id/tab1"
        app:layout_constraintEnd_toStartOf="@+id/tab3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <include
        android:id="@+id/tab3"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toEndOf="@+id/tab2"
        app:layout_constraintEnd_toStartOf="@+id/tab4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <include
        android:id="@+id/tab4"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toEndOf="@+id/tab3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tab1"
        android:background="#888"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationViewTab1"
        app:layout_constraintBottom_toTopOf="@+id/tab1"
        app:layout_constraintStart_toStartOf="@+id/tab1"
        app:layout_constraintEnd_toEndOf="@+id/tab1"
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:background="#660000"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationViewTab2"
        app:layout_constraintBottom_toTopOf="@+id/tab2"
        app:layout_constraintStart_toStartOf="@+id/tab2"
        app:layout_constraintEnd_toEndOf="@+id/tab2"
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:background="#880000"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationViewTab3"
        app:layout_constraintBottom_toTopOf="@+id/tab3"
        app:layout_constraintStart_toStartOf="@+id/tab3"
        app:layout_constraintEnd_toEndOf="@+id/tab3"
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:background="#aa0000"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationViewTab4"
        app:layout_constraintBottom_toTopOf="@+id/tab4"
        app:layout_constraintStart_toStartOf="@+id/tab4"
        app:layout_constraintEnd_toEndOf="@+id/tab4"
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:background="#cc0000"
        />


    <include
        android:id="@+id/tab5"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:layout_height="40dp"
        android:layout_width="275dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationViewTab5"
        app:layout_constraintBottom_toTopOf="@+id/tab5"
        app:layout_constraintStart_toStartOf="@+id/tab5"
        app:layout_constraintEnd_toEndOf="@+id/tab5"
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:background="#fff"
        />

    <include
        android:id="@+id/tab6"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.15"
        android:layout_height="40dp"
        android:layout_width="275dp"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationViewTab6"
        app:layout_constraintBottom_toTopOf="@+id/tab6"
        app:layout_constraintStart_toStartOf="@+id/tab6"
        app:layout_constraintEnd_toEndOf="@+id/tab6"
        android:layout_height="40dp"
        android:layout_width="0dp"
        android:background="#fff"
        />

</androidx.constraintlayout.widget.ConstraintLayout>