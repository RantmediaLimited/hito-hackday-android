<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <include
        android:id="@+id/tab1"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tab2"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <include
        android:id="@+id/tab2"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toEndOf="@+id/tab1"
        app:layout_constraintEnd_toStartOf="@+id/tab3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <include
        android:id="@+id/tab3"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toEndOf="@+id/tab2"
        app:layout_constraintEnd_toStartOf="@+id/tab4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <include
        android:id="@+id/tab4"
        layout="@layout/tab_layout"
        app:layout_constraintStart_toEndOf="@+id/tab3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tab1"
        android:background="#fff"
        />

    <ImageView
        android:id="@+id/tab1IV"
        app:layout_constraintBottom_toTopOf="@+id/tab1"
        app:layout_constraintStart_toStartOf="@+id/tab1"
        app:layout_constraintEnd_toEndOf="@+id/tab1"
        android:layout_height="20dp"
        android:paddingStart="-25dp"
        android:paddingEnd="-25dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_static_liquid_indicator"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/tab2IV"
        app:layout_constraintBottom_toTopOf="@+id/tab2"
        app:layout_constraintStart_toStartOf="@+id/tab2"
        app:layout_constraintEnd_toEndOf="@+id/tab2"
        android:layout_height="0dp"
        android:paddingStart="-25dp"
        android:paddingEnd="-25dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_static_liquid_indicator"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/tab3IV"
        app:layout_constraintBottom_toTopOf="@+id/tab3"
        app:layout_constraintStart_toStartOf="@+id/tab3"
        app:layout_constraintEnd_toEndOf="@+id/tab3"
        android:layout_height="0dp"
        android:paddingStart="-25dp"
        android:paddingEnd="-25dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_static_liquid_indicator"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/tab4IV"
        app:layout_constraintBottom_toTopOf="@+id/tab4"
        app:layout_constraintStart_toStartOf="@+id/tab4"
        app:layout_constraintEnd_toEndOf="@+id/tab4"
        android:layout_height="0dp"
        android:paddingStart="-25dp"
        android:paddingEnd="-25dp"
        android:layout_width="0dp"
        android:src="@drawable/ic_static_liquid_indicator"
        android:scaleType="fitXY"
        />

</androidx.constraintlayout.widget.ConstraintLayout>